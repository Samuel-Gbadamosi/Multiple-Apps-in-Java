<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BMI_PAGE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5E6F4"
    tools:context=".BMIActivity">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="242dp"
        android:layout_height="33dp"
        android:layout_marginTop="32dp"
        android:background="#523A7E"
        android:text="BMI CALCULATOR"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="205dp"
        android:layout_height="26dp"
        android:layout_marginTop="88dp"
        android:text="ENTER YOUR WEIGHT (KG) :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/height"
        android:layout_width="202dp"
        android:layout_height="32dp"
        android:layout_marginTop="48dp"
        android:text="ENTER YOUR HEIGHT(CM) :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Button
        android:id="@+id/buttonBmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="176dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:text="Your BMI :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBmi" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="54dp"
        android:layout_height="41dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <EditText
        android:id="@+id/heightInput"
        android:layout_width="63dp"
        android:layout_height="38dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toEndOf="@+id/height"
        app:layout_constraintTop_toBottomOf="@+id/weightInput" />

    <TextView
        android:id="@+id/BMI_cATERGORY"
        android:layout_width="232dp"
        android:layout_height="26dp"
        android:layout_marginTop="24dp"
        android:text="BMI category appears here above"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BMIresult" />

    <EditText
        android:id="@+id/BMIresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="Result"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="254dp"
        android:layout_height="97dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#D5E6F4"
        android:scaleType="centerInside"
        android:tint="#00CD5E5E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BMI_cATERGORY"
        app:srcCompat="@drawable/dragon" />

</androidx.constraintlayout.widget.ConstraintLayout>